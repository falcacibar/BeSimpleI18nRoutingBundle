<div class="barra_ciudad">
	<div class="centrado_ciudad">
		<div class="logo_ciudad">
			<img src="{{ asset('assets/images/extras/logo.png') }}" width="100" height="65" />
		</div>
		{% render "LoogaresExtraBundle:Default:ciudad" %}
		<div class="login">			
			{% if is_granted('ROLE_USER') %}
				{% set slug = (app.security.token.user.slug != '') ? app.security.token.user.slug : app.security.token.user.id %}					
				<a class="usuario_login" href="{{path('logout')}}">{{'general.header.usuario.logout'|trans}}</a>
				<a class="usuario_login" href="{{path('showUsuario', { 'param': slug })}}">{{app.security.token.user.nombre}} {{app.security.token.user.apellido}}</a>
			{% else %}
				<a class="usuario_login" href="{{path('login')}}">{{'general.header.usuario.login'|trans}}</a>
				<a class="usuario_login" href="{{path('registroUsuario')}}">{{'general.header.usuario.registro'|trans}}</a>
				<a class="facebook_login" href="#"></a>
			{% endif %}
		</div>
		<div class="redes_sociales">
			<a class="facebook_btn" href="http://www.facebook.com/Loogarescom" target="blank"></a>
			<a class="twitter_btn" href="http://www.twitter.com/Loogarescom" target="blank"></a>
			<a class="blog" href="#">Blog</a>
		</div>
	</div>
</div>

<div class="menu">
	<div class="centrado_menu">
		<div class="logo_ciudad_menu">
			<img src="{{ asset('assets/images/extras/logo_header.png') }}" width="50" height="34" />
		</div>
		{% render "LoogaresExtraBundle:Default:menu" %}
		<div class="buscador_box">
			<form action="{{ path('_buscar', { 'slug': 'santiago-de-chile' }) }}">
				<div class="buscar">
						<input class="buscador" name="term" type="text" placeholder="Completos, Lastarria, bares, La Moneda" />
					<div class="caja_icono">
						<a class="icono_buscar" href="#"></a>
					</div>
				</div>
			</form>	
		</div>
	</div>
</div>