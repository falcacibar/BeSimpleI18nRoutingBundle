<div class="menu_ciudad">
	<ul>
		<li>
			<a href="{{path('locale', {'slug': app.session.get('ciudad').slug})}}">{{app.session.get('ciudad').nombre}}</a>
			<div class="flecha_ciudad"></div>
			<ul>
				{% for ciudad in ciudades %}
					{% set route = (ciudad.slug|replace({'-':'_'})) %}

					<a href="{{path('locale_'~route, {'slug': ciudad.slug})}}">
						<li {% if ciudad.id == app.session.get('ciudad').id %}class="selected"{% endif %}>{{ciudad.nombre}}</li>
					</a>
				{% endfor %}
			</ul>
		</li>
	</ul>
</div>
