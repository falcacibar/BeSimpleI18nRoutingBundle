	{% set doce = 0 %}
	{% if totalParticipantes == 'all' %}
		<script src="{{asset('assets/js/concurso.js')}}" type="text/javascript"></script>
		<script>$(function(){actualizarQtip();});</script>
		{% set length = concurso.participantesActivos | length %}
		<div class="lightbox_participantes">
			<div class="header_participantes">
				{{ concurso.participantesActivos|length }} usuarios ya est√°n participando por {{ concurso.participantesActivos[0].concurso.post.titulo }}
			</div>

			<div class="body_participantes">
	{% elseif totalParticipantes == 'short' %}
		{% set length = 84 %}
	{% endif %}

	{% for participante in concurso.participantesActivos | slice(0, length) %}
		{% if loop.index == 1 or (loop.index > 12 and (loop.index - 1) % 12 == 0)  %}
			{% set doce = 0 %}
			<ul class="listado_participantes">
		{% endif %}
				<li class="participante_detalle">
					<a href="{{path('showUsuario', {'param' : participante.usuario.slug})}}">
						<img src="{{ ('assets/images/usuarios/'~participante.usuario.imagenFull) | apply_filter('tiny_usuario') }}" width="20" height="20" />
					</a>
					<span class="nombre_usuario" style="display:none">{{participante.usuario.nombre}} {{participante.usuario.apellido}}</span>
				</li>
		{% set doce = doce + 1 %}
		{% if doce == 12 %}
			</ul>				
		{% endif %}
	{% endfor %}

	{% if totalParticipantes == 'all' %}
			</div>
		</div>
	{% elseif totalParticipantes == 'short' %}
		{% set length = 84 %}

		<div class="participantes">
			<div class="cantidad_participantes_izq">
			</div>							
			<div class="cantidad_participantes">
				<span class="numero_participantes">{{concurso.participantesActivos|length}}</span>
				{{'extra.modulo_concursos.participantes'|transchoice(concurso.participantesActivos|length)}}
			</div>
			<div class="cantidad_participantes_der">
			</div>	
		</div>
	{% endif %}