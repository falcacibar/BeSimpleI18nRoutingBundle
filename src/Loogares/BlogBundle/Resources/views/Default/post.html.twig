{% extends '::base.html.twig' %}

{% block title %}{{parent()}} | {{post.titulo}}{% endblock %}

{% block content %}
<div class="post">
	<div class="post_contenido">
		<div class="post_header">
			<h1>{{post.titulo}}<h1>
			<p class="metadata">Escrito Por: {{post.usuario.nombre}} en {{post.fecha | date('y-m-d')}}</p>
		</div>
		
		(imagen) <br/>

		{{post.contenido | raw }}<br/>
	</div>

	<div class="detalles">
		<div class="detalles_foto">		
			{% if post.tipo == 'beneficio-exclusivo' %}
				Social stuff
			{% endif %}
		</div>

		<div class="detalles_contenido">
			{{post.detalles | raw }}
		</div>
	</div>

	<div class="condiciones">
		{{post.condiciones | raw}}
	</div>
</div>
<div class="sidebar">
	<div class="imagen_blog"></div>
	<div class="gads"></div>
	<div class="social_sidebar">Loogares social stuff</div>
	<div class="anteriores">
		<h2>Anteriores {{post.tipo}}:</h2>
		<ul>
		{% for anterior in anteriores %}
			<li><p>{{anterior.titulo}}</p></li>
		{% endfor %}
		</ul>
	</div>
</div>
{% endblock %}