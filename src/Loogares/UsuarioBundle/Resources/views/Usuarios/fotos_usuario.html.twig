{% set slug = (usuario.slug != '') ? usuario.slug : usuario.id %}

<div class="fotos_usuario">
	<h1>{{'usuario.fotos.titulo'|transchoice(usuario.totalImagenesLugar)}} ({{usuario.totalImagenesLugar}})</h1>

	{% if app.session.hasFlash('edicion-foto-lugar') %}
		    <div class="flash-notice">
		        {{ app.session.flash('edicion-foto-lugar') }}
		    </div>
	{% endif %}

	{% if app.session.hasFlash('eliminar-foto-lugar') %}
		    <div class="flash-notice">
		        {{ app.session.flash('eliminar-foto-lugar') }}
		    </div>
	{% endif %}

	<ul class="orden">
		<li class="bold">{{'usuario.fotos.orden.texto'|trans}}</li>		
		<li>
			{% if usuario.orden == 'ultimas' %}
				{{'usuario.fotos.orden.ultimas'|trans}} | 
			{% else %}
				<a href="{{path('fotosLugaresUsuario', { 'param' : slug, 'orden' : 'ultimas', 'pagina' : usuario.pagina })}}">{{'usuario.fotos.orden.ultimas'|trans}}</a> | 
			{% endif %}
		</li>
		<li>
			{% if usuario.orden == 'nombre' %}
				{{'usuario.fotos.orden.alfabetico'|trans}}
			{% else %}
				<a href="{{path('fotosLugaresUsuario', { 'param' : slug, 'orden' : 'nombre', 'pagina' : usuario.pagina })}}">{{'usuario.fotos.orden.alfabetico'|trans}}</a>
			{% endif %}
		</li>
	</ul>

	<div id="lista-fotos-usuario">
		{% set tres = 0 %}
		{% set i = 0 %}
		{% for imagen in usuario.imagenesLugar%}					
			{% if loop.index == 1 or (loop.index > 3 and (loop.index - 1) % 3 == 0)  %}
				{% set tres = 0 %}
				<ul>
			{% endif %}

					<li>
						<a href="{{path('_fotoGaleria', {'slug' : imagen.lugar.slug, 'id' : imagen.id})}}">
							<img src="{{ ('assets/images/lugares/'~imagen.imagenFull) | apply_filter('small_lugar') }}" />
						</a>

						<h4>
							<a href="{{path('_lugar', {'slug' : imagen.lugar.slug})}}">
								{{imagen.lugar.nombre}}
							</a>
						</h4>

						<span>{{imagen.fechaCreacion|date('d/m/Y')}}</span>

						<br />
						{% if usuario.loggeadoCorrecto is defined and usuario.loggeadoCorrecto %}
							<div class="opciones-fotos-usuario">
								<a href="{{path('_editarFotoLugar', {'slug' : imagen.lugar.slug, 'id' : imagen.id})}}">{{'usuario.fotos.lista.editar'|trans}}</a> <br />
								<a href="{{path('_eliminarFotoLugar', {'slug' : imagen.lugar.slug, 'id' : imagen.id})}}" class="borrar-foto-lugar">{{'usuario.fotos.lista.borrar'|trans}}</a>
							</div>
						{% endif %}

					</li>

			{% set tres = tres + 1 %}
			{% if tres == 3 %}
				</ul>				
			{% endif %}
				
			{% set i = i + 1 %}
			
		{% endfor %}
	</div>

	{% if usuario.totalPaginas > 1 %}
		<div class="paginacion">
			<span>{{paginacion.mostrandoDe}} al {{paginacion.mostrandoHasta}} de {{usuario.totalImagenesLugar}} | Ir a la p√°gina:</span>
			<ul class="orden">
				{{paginacion.paginacion|raw}}
			</ul>
		</div>
	{% endif %}

</div>