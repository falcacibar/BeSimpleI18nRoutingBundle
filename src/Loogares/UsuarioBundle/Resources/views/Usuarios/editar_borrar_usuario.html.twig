{% include 'LoogaresUsuarioBundle:Usuarios:menu_edicion.html.twig' %}

<div id="edicion-borrar" class="edicion">
	{% if app.session.hasFlash('edicion-borrar') %}
		    <div class="flash-notice">
		        {{ app.session.flash('edicion-borrar') }}
		    </div>
	{% endif %}

	{% if errors %}
		<div class="edicion_error">
			{% for error in errors %}
		        <p>{{ error }}</p>
		    {% endfor %}
		</div>
	{% endif %}

	<form action="{{ path('editarBorrarUsuario', { 'param': usuario.id }) }}" method="post">
		<div class="form-edicion">	
			<ul class="editar-usuario">
				<li>
					<label for="passwordActual">Password *</label>
					<input type="password" id="password" name="password" class="{{errors.password is defined ? 'input-error' : ' '}}"/>
					{% if errors.password is defined %}
						<small class="errors">{{errors.password}}</small>
					{% endif %}
				</li>		
				<li>
					<label for="motivo">¿Por qué te vas? Cuéntanos el motivo de tu salida. *</label>
					<textarea id="motivo" name="motivo" rows="4" class="{{errors.motivo is defined ? 'input-error' : ' '}}" ></textarea>
					{% if errors.motivo is defined %}
						<small class="errors">{{errors.motivo}}</small>
					{% endif %}
					
				</li>

				<li class="submit-borrar">
					<label></label><input type="submit" value="Borrar cuenta" formnovalidate />
				</li>
			</ul>
	    </div>		    
	</form>
</div>

{% block javascripts %}
	<script type="text/javascript">
		$('.submit-borrar input[type=submit]').click(function(){
			if(confirm('¿Estás seguro de querer borrar tu cuenta de Loogares.com?'))
				$('.form-edicion').parent().submit();
			return false;
		});
	</script>
{% endblock %}