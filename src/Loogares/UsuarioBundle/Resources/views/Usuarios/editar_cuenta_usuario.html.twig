{% include 'LoogaresUsuarioBundle:Usuarios:menu_edicion.html.twig' %}

<div id="edicion-cuenta" class="edicion">
	<form action="{{ path('editarCuentaUsuario', { 'param': usuario.id }) }}" method="post" {{ form_enctype(form) }}>
		<div class="form-edicion">
			{% if form_errors(form) %}
				<div class="errores">
					{{form_errors(form)}}
				</div>
			{% endif %}
			{% if form_errors(form.mail) or form_errors(form.nombre) or form_errors(form.apellido) %}
			<div class="errores">
				{{ form_errors(form.mail) }}
				{{ form_errors(form.nombre) }}
				{{ form_errors(form.apellido) }}
			</div>
			{% endif %}
			<div>
				{{ form_label(form.nombre, 'Nombre *') }}
				{{ form_widget(form.nombre, { 'attr': {'data-placeholder': 'Ej. Juan'}}) }}
			</div>

			<div>
				{{ form_label(form.apellido, 'Apellido *') }}
				{{ form_widget(form.apellido, { 'attr': {'data-placeholder': 'Ej. Vald√©z'}}) }}
			</div>

			<div>
				{{ form_label(form.mail, 'E-mail *') }}
				{{ form_widget(form.mail, { 'attr': {'data-placeholder': 'Ej. juanito@empresa.com'}}) }}
			</div>
			
			<div>
				{{ form_label(form.slug, 'Nombre de usuario') }}
				{{ form_widget(form.slug, { 'attr': {'data-placeholder': 'Ej. juanito@empresa.com'}}) }}
			</div> 
			
			<div>
				{{ form_label(form.fecha_nacimiento, 'Fecha de nacimiento') }}
				{{ form_widget(form.fecha_nacimiento, { 'attr': {'class': 'edicion-fecha-nacimiento'}}) }}
			</div>  
			
			<div>
				{{ form_label(form.sexo) }}
				{{ form_widget(form.sexo, { 'attr': {'class': 'edicion-fecha-nacimiento'}}) }}
			</div>  <br /><br />
			
			<div>
				{{ form_label(form.web, 'Sitio web') }}
				{{ form_widget(form.web) }}
			</div>

			<div>
				{{ form_label(form.facebook) }}
				{{ form_widget(form.facebook) }}
			</div>

			<div>
				{{ form_label(form.twitter) }}
				{{ form_widget(form.twitter) }}
			</div>

			<div>
				{{ form_label(form.newsletter_activo) }}
				{{ form_widget(form.newsletter_activo) }}
			</div> 

		    {{ form_rest(form) }}

			<div class="submit">
				<label></label><input type="submit" value="Guardar" formnovalidate />
			</div>
	    </div>		    
	</form>
</div>