{% extends 'LoogaresUsuarioBundle::layout.html.twig' %}

{% block title %}{{usuario.usuario}} | {{parent()}}{% endblock %}
{% block content %}
	{% include 'LoogaresUsuarioBundle:Usuarios:menu_usuario.html.twig' %}
	<div id="main-usuario">
		<div id="data-usuario">
			<div id="image-usuario"></div>
			<h3>{{usuario.usuario}}</h3>

			<ul>
				<li>{{usuario.nombre}} {{usuario.apellido}}</li>
				<li>{% if usuario.sexoResult != '' %}
						{{usuario.sexoResult}}, 
					{% endif %}
					{{usuario.edadResult}} a√±os
				</li>
			</ul>

			Largo resultado: {{usuario.resultado|length}}

			<ul class="bold">
				<li>{{usuario.totalRecomendaciones}} recomendaciones</li>
				<li>{{usuario.totalPrimerasRecomendaciones}} primeras recomendaciones</li>
				<li>{{usuario.totalLugaresAgregados}} lugares agregados</li>
				<li>{{usuario.totalImagenesLugar}} fotos agregadas</li>
			</ul>

			<p class="bold">En Loogares.com desde: <br /> {{usuario.desdeResult}}</p>
			{% if usuario.links|length > 0 %}
				<ul class="bold">
				{% for link in usuario.links %}
					<li><a href="{{link}}" target="blank">{{link}}</a></li>
				{% endfor %}
				</ul>
			{% endif %}
		</div>
		<div id="content-usuario">
			{% include 'LoogaresUsuarioBundle:Usuarios:content_usuario.html.twig' %}
		</div>
	</div>
{% endblock %}