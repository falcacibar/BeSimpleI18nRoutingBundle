	{% if actividad_total is defined and actividad_total == true %}
		<p class="filtrar_actividad_por">{{'usuario.actividad.filtrar'|trans}}</p>
		<div class="filtrar_select">
			<form action="{{path('actividadUsuario', {'param' : usuario.slug})}}" method="get">
				<select name="filtro">
					<option value="todo" {% if usuario.filtro == 'todo'%}selected="selected"{% endif %}>{{'extra.home.actividad_reciente.filtro.todo'|trans}}</option>
					<option value="recomendaciones" {% if usuario.filtro == 'recomendaciones'%}selected="selected"{% endif %}>{{'extra.home.actividad_reciente.filtro.recomendaciones'|trans}}</option>
					<option value="lugares" {% if usuario.filtro == 'lugares'%}selected="selected"{% endif %}>{{'extra.home.actividad_reciente.filtro.lugares'|trans}}</option>
					<option value="fotos" {% if usuario.filtro == 'fotos'%}selected="selected"{% endif %}>{{'extra.home.actividad_reciente.filtro.fotos'|trans}}</option>
					<option value="utiles" {% if usuario.filtro == 'utiles'%}selected="selected"{% endif %}>{{'extra.home.actividad_reciente.filtro.utiles'|trans}}</option>
				</select>
			</form>	
		</div>
	{% endif %}
	<ul>
	{% for a in usuario.actividad %}
		<li {% if loop.last %}class="last_one"{% endif %}>		
			<p>	
			{% if a.tipoActividadReciente.nombre == 'agregar' %}
				{% if a.entidad == 'Loogares\\LugarBundle\\Entity\\ImagenLugar'%}						
					<a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">{{a.usuario.nombre}} {{a.usuario.apellido}}</a> {% trans with {'%open_tag%' : "<a href='"~path('_fotoGaleria', {'slug' : a.ent.lugar.slug, 'id' : a.ent.id})~"'>", '%close_tag%' : '</a>'}%}extra.home.actividad_reciente.agregar.foto{% endtrans %} <a href="{{path('_lugar', {'slug' : a.ent.lugar.slug})}}">{{a.ent.lugar.nombre}}</a>

				{% elseif a.entidad == 'Loogares\\UsuarioBundle\\Entity\\Recomendacion'%}
					<a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">{{a.usuario.nombre}} {{a.usuario.apellido}}</a> {% trans with {'%open_tag%' : "<a href='"~path('_recomendacion', {'slug' : a.ent.lugar.slug, 'usuarioSlug' : a.usuario.slug})~"'>", '%close_tag%' : '</a>', '%estrellas%' : "<span class='estrellas_actividad' data-stars="~a.ent.estrellas~"></span>"}%}extra.home.actividad_reciente.agregar.recomendacion{% endtrans %} <a href="{{path('_lugar', {'slug' : a.ent.lugar.slug})}}">{{a.ent.lugar.nombre}}</a>

				{% elseif a.entidad == 'Loogares\\UsuarioBundle\\Entity\\Util'%}
					<a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">{{a.usuario.nombre}} {{a.usuario.apellido}}</a> {% trans with {'%open_tag%' : "<a href='"~path('_recomendacion', {'slug' : a.ent.recomendacion.lugar.slug, 'usuarioSlug' : a.ent.recomendacion.usuario.slug})~"'>", '%close_tag%' : '</a>', '%usuario%' : "<a href='"~path('showUsuario', {'param' : a.ent.recomendacion.usuario.slug})~"'>"~a.ent.recomendacion.usuario.nombre~' '~a.ent.recomendacion.usuario.apellido~"</a>"}%}extra.home.actividad_reciente.agregar.util{% endtrans %} <a href="{{path('_lugar', {'slug' : a.ent.recomendacion.lugar.slug})}}">{{a.ent.recomendacion.lugar.nombre}}</a>

				{% elseif a.entidad == 'Loogares\\LugarBundle\\Entity\\Lugar'%}
					<a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">{{a.usuario.nombre}} {{a.usuario.apellido}}</a> {{'extra.home.actividad_reciente.agregar.lugar'|trans}}: <a href="{{path('_lugar', {'slug' : a.ent.slug})}}">{{a.ent.nombre}}</a>
				{% endif %}

			{% elseif a.tipoActividadReciente.nombre == 'editar' %}
				{% if a.entidad == 'Loogares\\UsuarioBundle\\Entity\\Recomendacion'%}
					<a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">{{a.usuario.nombre}} {{a.usuario.apellido}}</a> {% trans with {'%open_tag%' : "<a href='"~path('_recomendacion', {'slug' : a.ent.lugar.slug, 'usuarioSlug' : a.usuario.slug})~"'>", '%close_tag%' : '</a>', '%estrellas%' : "<span class='estrellas_actividad' data-stars="~a.ent.estrellas~"></span>"}%}extra.home.actividad_reciente.editar.recomendacion{% endtrans %} <a href="{{path('_lugar', {'slug' : a.ent.lugar.slug})}}">{{a.ent.lugar.nombre}}</a>
				{% endif %}
			{% endif %}
				<span> - {{ a.relativeTime }}</span>
			</p>
		</li>
	{% endfor %}
	</ul>

	{% if actividad_total is defined and actividad_total == true  %}
		{% if usuario.totalPaginas > 1 %}
			<div class="paginacion_perfil">
	        	<p><strong>{{ paginacion.mostrandoDe }}</strong> {{'paginacion.al'|trans}} <strong>{{ paginacion.mostrandoHasta }}</strong> {{'paginacion.de'|trans}} <strong>{{usuario.totalActividad}}</strong>
	            {% if paginacion.totalPaginas != 1 %}
	                 | {{'paginacion.ir_a'|trans}}
	                <ul>
	                    {{ paginacion.paginacion | raw }}
	                </ul>
	            {% endif %}
	        </div>
	    {% endif %}
	{% endif %}