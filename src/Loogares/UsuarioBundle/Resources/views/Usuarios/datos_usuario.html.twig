<div class="datos_usuario">
	<div class="imagen_usuario">
		<a href="{{asset('assets/images/usuarios/'~usuario.imagenFull)}}">
			<img src="{{ ('assets/images/usuarios/'~usuario.imagenFull) | apply_filter('medium_usuario') }}" height="140" width="140" />
		</a>
	</div>

	<h1 class="nombre_usuario">
		{% if usuario.nombre != '' %}
			{{usuario.nombre}} {{usuario.apellido}}</a>
		{% else %}
			{{usuario.slug}}
		{% endif %}
	</h1>
	
	<div class="datos_principales_usuario">
		<p class="fecha_registro">{% trans %}usuario.datos.desde{% endtrans %} {{usuario.fechaRegistro|date('d/m/Y')}}</p>
		<p class="sexo_usuario_{{ usuario.sexoResult }}"></p>
		<p class="edad_usuario">
			{% if usuario.edad is not empty %}
				{{usuario.edad}} {% transchoice usuario.edad%}usuario.datos.edad{% endtranschoice %}
			{% endif %}
		</p>
		<p class="ciudad_pais_usuario">{{usuario.ubicacion | join(', ')}}</p>

		{% if usuario.links|length > 0 %}
			<ul class="link_usuario">
				{% if usuario.links.facebook is defined %}
					<a class="facebook_link" href="http://{{ usuario.links.facebook }}" target="blank"></a>
				{% endif %}
				{% if usuario.links.twitter is defined %}
					<a class="twitter_link" href="http://{{ usuario.links.twitter }}" target="blank"></a>
				{% endif %}
				{% if usuario.links.web is defined %}
					<a class="url_link" href="http://{{ usuario.links.web }}" target="blank">{{ usuario.links.web }}</a>
				{% endif %}			
			</ul>
		{% endif %}
	</div>
	
	<div class="actividad_usuario_izq">
		<ul>
			<li class="recomendaciones_usuario">
				<a href="{{ path('recomendacionesUsuario', {'param': usuario.slug}) }}">
					{{usuario.totalRecomendaciones}} {% transchoice usuario.totalRecomendaciones%}usuario.datos.recomendaciones{% endtranschoice %}
				</a>
			</li>
			<li class="primeras_recomendaciones_usuario">{{usuario.totalPrimerasRecomendaciones}} {% transchoice usuario.totalPrimerasRecomendaciones%}usuario.datos.primeras_recomendaciones{% endtranschoice %}</li>
			<li class="imagenes_usuario">
				<a href="{{path('fotosLugaresUsuario', { 'param' : usuario.slug })}}">
					{{usuario.totalImagenesLugar}} {% transchoice usuario.totalImagenesLugar%}usuario.datos.fotos_agregadas{% endtranschoice %}
				</a>
			</li>
			<li class="lugares_usuario">{{usuario.totalLugaresAgregados}} {% transchoice usuario.totalLugaresAgregados%}usuario.datos.lugares_agregados{% endtranschoice %}</li>
		</ul>
	</div>

	<div class="actividad_usuario_der">
		<ul>
			<li class="lugares_por_visitar_usuario">
				<a href="{{path('lugaresUsuario', { 'param' : usuario.slug, 'accionLugar' : 'visitar' })}}">
					<span>{{usuario.totalAcciones[0]}}</span> {% transchoice usuario.totalAcciones[0]%}usuario.datos.por_visitar{% endtranschoice %}
				</a>
			</li>
			<li class="lugares_visitados_usuario">
				<a href="{{path('lugaresUsuario', { 'param' : usuario.slug, 'accionLugar' : 'visitados' })}}">
					{{usuario.totalAcciones[2]}} {% transchoice usuario.totalAcciones[2]%}usuario.datos.visitados{% endtranschoice %}
				</a>
			</li>
			<li class="lugares_por_recomendar_usuario">
				<a href="{{path('lugaresUsuario', { 'param' : usuario.slug, 'accionLugar' : 'recomendar' })}}">
					<span>{{usuario.totalAcciones[4]}}</span> {% transchoice usuario.totalAcciones[4]%}usuario.datos.por_recomendar{% endtranschoice %}
				</a>
			</li>
			<li class="lugares_favoritos_usuario">
				<a href="{{path('lugaresUsuario', { 'param' : usuario.slug, 'accionLugar' : 'favoritos' })}}">
					<span>{{usuario.totalAcciones[3]}}</span> {% transchoice usuario.totalAcciones[3]%}usuario.datos.favoritos{% endtranschoice %}
				</a>
			</li>
		</ul>
	</div>

</div>