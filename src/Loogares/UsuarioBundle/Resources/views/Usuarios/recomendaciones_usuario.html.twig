{% set slug = (usuario.slug != '') ? usuario.slug : usuario.id %}

<div class="recomendaciones">
	<h1>{{'usuario.recomendaciones.titulo'|transchoice(usuario.totalRecomendaciones)}} ({{usuario.totalRecomendaciones}})</h1>

	<ul>
		<li class="bold">{{'usuario.recomendaciones.orden.texto'|trans}}</li>
		<li>
			{% if usuario.orden == 'mejor-evaluadas' %}
				{{'usuario.recomendaciones.orden.mejores'|trans}} | 
			{% else %}		
				<a href="{{path('recomendacionesUsuario', { 'param' : slug, 'orden' : 'mejor-evaluadas', 'pagina' : usuario.pagina})}}">{{'usuario.recomendaciones.orden.mejores'|trans}}</a> | 
			{% endif %}
		</li>
		<li>
			{% if usuario.orden == 'ultimas' %}
				{{'usuario.recomendaciones.orden.ultimas'|trans}} | 
			{% else %}
				<a href="{{path('recomendacionesUsuario', { 'param' : slug, 'orden' : 'ultimas', 'pagina' : usuario.pagina })}}">{{'usuario.recomendaciones.orden.ultimas'|trans}}</a> | 
			{% endif %}
		</li>
		<li>
			{% if usuario.orden == 'nombre' %}
				{{'usuario.recomendaciones.orden.alfabetico'|trans}}
			{% else %}
				<a href="{{path('recomendacionesUsuario', { 'param' : slug, 'orden' : 'nombre', 'pagina' : usuario.pagina })}}">{{'usuario.recomendaciones.orden.alfabetico'|trans}}</a>
			{% endif %}
		</li>
	</ul>

	<table>
		<tr class="no-bottom-border">
			<th><input type="checkbox" class="recomendaciones-todas" /></th>
			<th>{{'usuario.recomendaciones.lista.nombre'|trans}}</th>
			<th>{{'usuario.recomendaciones.lista.evaluacion'|trans}}</th>
			<th>{{'usuario.recomendaciones.lista.fecha'|trans}}</th>
			<th>{{'usuario.recomendaciones.lista.categorias'|trans}}</th>
		</tr>

		{% set i = 0 %}		
		{% for recomendacion in usuario.recomendacionesTodas %}			
			<tr>
				<td><input type="checkbox" /></td>
				<td><a href="{{path('_lugar', { 'slug': recomendacion.lugar.slug })}}">{{recomendacion.lugar.nombre}}</a></td>
				<td>{{recomendacion.estrellas}}</td>
				<td>{{recomendacion.fechaCreacion|date('d/m/Y')}}</td>
				<td>
					{% for categoriaLugar in recomendacion.lugar.categoriaLugar %}
						<a href="#">{{categoriaLugar.categoria.nombre}}</a>
						{{-((loop.index == recomendacion.lugar.categoriaLugar|length) ? '' : ', ')}}
					{% endfor %}
				</td>			
				<td><a href="#">{{'usuario.recomendaciones.lista.ver'|trans}}</a></td>
				<td><a href="#">{{'usuario.recomendaciones.lista.editar'|trans}}</a></td>
			</tr>
			{% set i = i + 1 %}
			
		{% endfor %}
	</table>
		{% if usuario.totalPaginas > 1 %}
		<div class="paginacion">
			<span>{{ paginacion.mostrandoDe }} al {{ paginacion.mostrandoHasta }} de {{usuario.totalRecomendaciones}} | Ir a la p√°gina:</span>
			<ul>
				{{paginacion.paginacion | raw}}
			</ul>
		</div>
	{% endif %}
</div>