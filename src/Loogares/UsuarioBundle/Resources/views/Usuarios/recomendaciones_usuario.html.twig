{% set slug = (usuario.slug != '') ? usuario.slug : usuario.id %}

<div class="caja_recomendaciones_usuario">
	<h2 class="titulo_accion_usuario">
		{{usuario.totalRecomendaciones}} {{'usuario.recomendaciones.titulo'|transchoice(usuario.totalRecomendaciones)}}
	</h2>

	<ul>
		<li><strong>{{'usuario.recomendaciones.orden.texto'|trans}}</strong></li>
		<li>
			{% if usuario.orden == 'ultimas' %}
				{{'usuario.recomendaciones.orden.ultimas'|trans}}<span class="orden_separacion">|</span>
			{% else %}
				<a href="{{path('recomendacionesUsuario', { 'param' : slug, 'orden' : 'ultimas', 'pagina' : usuario.pagina })}}">{{'usuario.recomendaciones.orden.ultimas'|trans}}</a><span class="orden_separacion">|</span>
			{% endif %}
		</li>
		<li>
			{% if usuario.orden == 'mejor-evaluadas' %}
				{{'usuario.recomendaciones.orden.mejores'|trans}}<span class="orden_separacion">|</span>
			{% else %}		
				<a href="{{path('recomendacionesUsuario', { 'param' : slug, 'orden' : 'mejor-evaluadas', 'pagina' : usuario.pagina})}}">{{'usuario.recomendaciones.orden.mejores'|trans}}</a><span class="orden_separacion">|</span>
			{% endif %}
		</li>
		<li>
			{% if usuario.orden == 'nombre' %}
				{{'usuario.recomendaciones.orden.alfabetico'|trans}}
			{% else %}
				<a href="{{path('recomendacionesUsuario', { 'param' : slug, 'orden' : 'nombre', 'pagina' : usuario.pagina })}}">{{'usuario.recomendaciones.orden.alfabetico'|trans}}</a>
			{% endif %}
		</li>
	</ul>

	{% set i = 0 %}		
	{% for recomendacion in usuario.recomendacionesTodas %}			
		<div class="caja_recomendaciones_lugar_usuario">
			<div class="imagen_recomendaciones_lugar_usuario">
				<img src="" height="50" width="50" />
			</div>
			<div class="textos_recomendacion_lugar_usuario">
				<strong><a class="nombre_lugar_recomendacion" href="{{path('_lugar', { 'slug': recomendacion.lugar.slug })}}">{{recomendacion.lugar.nombre}}</a></strong>
				<p class="categorias_lugar_recomendacion"><strong>{{'usuario.recomendaciones.recomendacion.categorias'|trans}}</strong>
					{% for categoriaLugar in recomendacion.lugar.categoriaLugar %}
						<a href="#">{{categoriaLugar.categoria.nombre}}</a>
						{{-((loop.index == recomendacion.lugar.categoriaLugar|length) ? '' : ', ')}}
					{% endfor %}
				</p>
				<p class="fecha_lugar_recomendacion">{{recomendacion.fechaCreacion|date('d/m/Y')}}</p>
				<p class="estrella_lugar_recomendacion">{{recomendacion.estrellas}}</p>
				<p class="texto_lugar_recomendacion">Textos de prueba donde debería ir la recomendación del usuario... Textos de prueba donde debería ir la recomendación del usuario... Textos de prueba donde debería ir la recomendación del usuario... Textos de prueba donde debería ir la recomendación del usuario... Textos de prueba donde debería ir la recomendación del usuario... </p>
				<p class="tags_lugar_recomendacion">{{'usuario.recomendaciones.recomendacion.tags'|trans}}</p>
				<div class="caja_opciones_lugar_recomendacion">
					<div class="opciones_lugar_recomendacion">
						<a class="borrar_lugar_recomendacion" href="#">{{'usuario.recomendaciones.lista.borrar'|trans}}</a>
						<a class="editar_lugar_recomendacion" href="#">{{'usuario.recomendaciones.lista.editar'|trans}}</a>
					</div>
				</div>
			</div>
		</div>
	{% set i = i + 1 %}		
	{% endfor %}

 		{% if usuario.totalPaginas > 1 %}
    	<div class="paginacion_perfil">
        	<p><strong>{{ paginacion.mostrandoDe }}</strong> al <strong>{{ paginacion.mostrandoHasta }}</strong> de <strong>{{usuario.totalRecomendaciones}}</strong>
            {% if paginacion.totalPaginas != 1 %}
                 | Ir a la página
                <ul>
                    {{ paginacion.paginacion | raw }}
                </ul>
            {% endif %}
        </div>
		{% endif %}
</div>