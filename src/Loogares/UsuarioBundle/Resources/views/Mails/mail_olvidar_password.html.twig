<body>
    <div style="font-family:Arial,sans-serif">
        <table align="center" cellpadding="0" cellspacing="0" width="600" style="width:600px">
            <tr>
                <td width="160"><img src="{{ assets.logo }}" width="160" height="100" /></td>
                <td width="440" valign="middle"><hr /></td>
            </tr>
            <tr>
                <td style="font-size:12px; color:#000; font-family:Arial,sans-serif" colspan="2">
                    <br />
                    {{'olvidar.mail.titulo'|trans({'%usuario%' : mail.usuario.nombre~' '~mail.usuario.apellido }) }}<br />
                    <br />
                    {% trans with {'%open_tag%' : "<a href="~url('regenerarPassword',{'hash' : mail.usuario.hashConfirmacion})~" style='color:#06f; text-decoration:none'>", '%close_tag%' : "</a>"}%}olvidar.mail.primero{% endtrans %}
                    <br />
                    {{'olvidar.mail.segundo'|trans}}<br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                </td>
            </tr>
            <tr>
                <td style="font-size:11px; color:#999; font-family:Arial,sans-serif" colspan="2">
                    <hr />
                    <br />
                    {% trans with {'%open_tag%': "<b><a href='http://www.loogares.com' style='color:#06f; text-decoration:none'>", '%close_tag%' : '</a></b>'}%}usuario.mail.equipo{% endtrans %}<br />
                    <br />
                    {% trans with {'%open_a%': "<a href='mailto:contacto@loogares.com' style='color:#06f; text-decoration:none'>", '%close_a%' : '</a>'}%}usuario.mail.contacto{% endtrans %}
                    <br />
                    <br />
                    &copy; {{'usuario.mail.firma'|trans}}
                </td>

            </tr>
        </table>
    </div>
</body>