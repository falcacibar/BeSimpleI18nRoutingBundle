<body>
    <div style="font-family:Arial,sans-serif">
        <table align="center" cellpadding="0" cellspacing="0" width="600" style="width:600px">
            <tr>
                <td width="160"><img src="{{ logo }}" width="160" height="100" /></td>
                <td valign="middle" width="440"><hr /></td>
            </tr>
            <tr>
                <td style="font-size:14px; color:#000; font-family:Arial,sans-serif" colspan="2">
                    <br />
                    <br />
                    {{mail.asunto}}
                    <br />
                    <br />
                </td>
            </tr>
            <tr>
                <td style="font-size:12px; color:#000; font-family:Arial,sans-serif" colspan="2">
                    <br />
                    <div>
                        <p>{{'admin.notificaciones.saludo'|trans({'%nombre%' : mail.usuario.nombre, '%apellido%' : mail.usuario.apellido})}}</p>
                        {% if mail.tipo == 'aprobar' %}
                            <p>{{'admin.notificaciones.recomendacion.aprobar.primero'|trans({'%lugar%' : mail.recomendacion.lugar.nombre})}}</p>
                        {% elseif mail.tipo == 'mover' %}                        
                            <p>{% trans with {'%open_tag%' : "<a href="~url('_recomendacion',{'slug' : mail.recomendacion.lugar.slug,'usuarioSlug' : (mail.usuario.slug is not empty) ? mail.usuario.slug : mail.usuario.id})~">",'%close_tag%' : "</a>", '%old_lugar%' : mail.old_lugar.nombre,'%new_lugar%' : mail.recomendacion.lugar.nombre} %}admin.notificaciones.recomendacion.mover.primero{% endtrans %}</p>
                            <p>{{'admin.notificaciones.recomendacion.mover.segundo'|trans}}</p>                           
                        {% elseif mail.tipo == 'borrar' %}
                            <p>{{'admin.notificaciones.recomendacion.borrar.primero'|trans({'%lugar%' : mail.recomendacion.lugar.nombre})}}</p>
                            <p>{{'admin.notificaciones.recomendacion.borrar.segundo'|trans}}</p>
                        {% endif %}
                        <p>{{'admin.notificaciones.recomendacion.despedida'|trans}}</p>
                    </div>
                    <br />
                    <br />
                </td>
            </tr>
            <tr>
                <td style="font-size:11px; color:#999; font-family:Arial,sans-serif" colspan="2">
                    <hr />
                    <br />
                    {% trans with {'%open_tag%': "<b><a href='http://www.loogares.com' style='color:#06f; text-decoration:none'>", '%close_tag%' : '</a></b>'}%}usuario.mail.equipo{% endtrans %}<br />
                    <br />
                    {% trans with {'%open_a%': "<a href='mailto:contacto@loogares.com' style='color:#06f; text-decoration:none'>", '%close_a%' : '</a>'}%}usuario.mail.contacto{% endtrans %}
                    <br />
                    <br />
                    &copy; {{'usuario.mail.firma'|trans}}
                </td>

            </tr>
        </table>
    </div>
</body>