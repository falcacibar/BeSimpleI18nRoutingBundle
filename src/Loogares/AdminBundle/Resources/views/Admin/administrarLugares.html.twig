{% extends 'LoogaresAdminBundle:Admin:base.html.twig' %}
{% block content %}

<div class="menu_admin">

	<h1 class="titulo_admin">Lugares</h1>

	<ul class="submenu_admin">
		<li>
			<a href="{{ path('LoogaresAdminBundle_listadoLugares', {'ciudad': ciudad}) }}">Publicados</a> <span class="totales">{{totalLugares}}</span>
		</li>
		<li>
			<a href="{{ path('LoogaresAdminBundle_listadoLugares', {'ciudad': ciudad, 'pestado': 'Por Revisar'}) }}">Agregados (por revisar)</a> <span class="totales">{{totalLugaresPorRevisar}}</span>
		</li>
		<li>
			<a href="{{ path('LoogaresAdminBundle_listadoRevision', {'ciudad': ciudad}) }}">Editados (por revisar)</a> <span class="totales">{{totalLugaresConRevision}}</span>
		</li>
		<li>
			<a href="{{ path('LoogaresAdminBundle_listadoLugares', {'ciudad': ciudad, 'pestado': 'Reportado'}) }}">Reportados</a> <span class="totales">{{totalLugaresReportados}}</span>
		</li>
		<li>
			<a href="{{ path('LoogaresAdminBundle_listadoLugares', {'ciudad': ciudad, 'pestado': 'Cerrado'}) }}">Cerrados</a> <span class="totales"></span>
		</li>
		<li>
			<a href="{{ path('LoogaresAdminBundle_listadoLugares', {'ciudad': ciudad, 'pestado': 'Eliminado'}) }}">Eliminados</a> <span class="totales"></span>
		</li>
	</ul>

	<h2 class="titulo_admin">Recomendaciones</h2>

	<ul class="submenu_admin">	
		<li>
			<a href="{{ path('LoogaresAdminBundle_listadoRecomendaciones', {'ciudad': ciudad }) }}">Publicadas</a> <span class="totales">{{totalRecomendaciones}}</span>
		</li>
		<li>
			<a href="{{ path('LoogaresAdminBundle_listadoRecomendaciones', {'ciudad': ciudad, 'pestado': 'Reportado', 'fecha_creacion': 'asc' }) }}">Reportadas</a> <span class="totales">{{totalRecomendacionesReportadas}}</span>
		</li>
	</ul>

	<h3 class="titulo_admin">Pedidos Online</h2>

	<ul class="submenu_admin">
		<li>
			<a href="{{ path('LoogaresAdminBundle_pedidosLugar', {'ciudad': ciudad, 'slug': 'todos' }) }}">Pedidos Online</a> <span class="totales">{{totalPedidos}}</span>
		</li>
	</ul>

	<h4 class="titulo_admin">Fotos</h2>

	<ul class="submenu_admin">
		<li>
			<a href="{{ path('LoogaresAdminBundle_fotosLugar', {'ciudad': ciudad, 'slug': 'todos'}) }}">Publicadas</a> <span class="totales">{{totalFotos}}</span>
		</li>
		<li>
			<a href="{{ path('LoogaresAdminBundle_fotosLugar', {'ciudad': ciudad, 'slug': 'todos', 'pestado': 'Por Revisar', 'fecha_creacion': 'desc'}) }}">Agregadas (por revisar)</a> <span class="totales">{{totalFotosPorRevisar}}</span>
		</li>
		<li>
			<a href="{{ path('LoogaresAdminBundle_fotosLugar', {'ciudad': ciudad, 'slug': 'todos', 'pestado': 'Reportado', 'fecha_creacion': 'desc'}) }}">Reportadas</a> <span class="totales">{{totalFotosReportadas}}</span>
		</li>
	</ul>

</div>

{% endblock %}