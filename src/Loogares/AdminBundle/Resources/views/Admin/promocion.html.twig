{% if pedido.promocion != null %} 
	<strong>Promoción</strong>
	<a href="{{ path('LoogaresAdminBundle_borrarPromocion', {'slug': slug, 'ciudad': ciudad, 'id' : pedido.id}) }}" class="quitar_promocion">Quitar promoción</a>					
{% else %}
	<strong>Este pedido no incluye promoción</strong>
{% endif %}

<ul>
	<li>
		<label for="titulo">Título</label>
		<textarea name="titulo" rows="2">{{(pedido is defined and pedido.promocion != null) ? pedido.promocion.titulo : ''}}</textarea>
	</li>
	<li>
		<label for="dias">Días</label>
		<input type="text" name="dias" value="{{(pedido is defined and pedido.promocion != null) ? pedido.promocion.dias : ''}}" />
	</li>
	<li>
		<label for="descripcion">Descripción</label>
		<textarea name="descripcion" rows="4">{{(pedido is defined and pedido.promocion != null) ? pedido.promocion.descripcion : ''}}</textarea>
	</li>
</ul>