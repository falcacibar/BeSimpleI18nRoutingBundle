{% extends "LoogaresAdminBundle:Admin:base.html.twig" %}

{% block title %}Fotos | {{parent()}}{% endblock %}
{% block javascript %}
<script>
	    $( "#mover" ).autocomplete({
            source: WEBROOT+"../admin/ajax/sugerirLugar",
            minLength: 1,
            select: function(event, ui){
            	console.log(ui.item.value.match(/\(\d+\)/));
            	$('#id').val(ui.item.value.match(/\(\d+\)/)[0])
            }
        });
</script>
{% endblock %}
{% block content %}


	<h1 class="titulo_admin">Editar foto {{foto.id}} de {{foto.lugar.nombre}} | Estado: {{foto.estado.nombre}}</h1>


	<form action="{{ path('LoogaresAdminBundle_editarFoto', {'ciudad': ciudad.slug, 'slug': slug, 'id': foto.id }) }}" method="post">
		<ul class="agregar_blog_posts">
			<li>
				<label>Lugar</label>
				<input type="text" name="lugar" value="{{foto.lugar.nombre}} ({{foto.lugar.id}})"/>
			</li>
			<li>
				<label>Mover a: </label>
				<input id="mover" type="text">
				<input type="hidden" name="lugar_id" id="id" />
			</li>
			<li>
				<label>Usuario</label>
				<input type="text" name="usuario" value="{{foto.usuario.slug}}"/>
			</li>
			<li>
				<label>Texto</label>
				<textarea name="titulo_enlace" rows="5">{{foto.tituloEnlace}}</textarea>
				<span class="tip">Empezar el texto con "http://" para que sea publicado como un enlace</span>
			</li>
			<li>
				<label>Imagen</label>
				<img src="{{ ('assets/images/lugares/'~foto.imagenFull) | apply_filter('large_lugar')}}"/>	
			</li>
			<li>
				<label>Acciones</label>
				<span>
					{% if foto.estado.nombre == 'Aprobado' or foto.estado.nombre == 'Por Revisar' or foto.estado.nombre == 'Reportado' %}
					    <a href="{{ path('LoogaresAdminBundle_borrarFoto', {'slug': slug, 'ciudad':  ciudad.slug, 'id': foto.id}) }}"><img src="{{asset('assets/images/administrador/cross.png')}}"/></a>
					{% endif %}

					{% if foto.estado.nombre == 'Eliminado' or foto.estado.nombre == 'Por Revisar' or foto.estado.nombre == 'Reportado'%}
					    <a href="{{ path('LoogaresAdminBundle_aprobarFoto', {'slug': slug, 'ciudad':  ciudad.slug, 'id': foto.id }) }}"><img src="{{asset('assets/images/administrador/tick.png')}}"/></a>
					{% endif %}
				</span>
			</li>
		</ul>
		<input class="guardar_posts" type="submit" value=""/>
	</form>

{% endblock %}

