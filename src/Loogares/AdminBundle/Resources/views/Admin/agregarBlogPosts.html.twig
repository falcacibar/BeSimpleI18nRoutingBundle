		    $('.ganadores_checkbox').change(function(e){
		        $table = $(this).closest('table');
		        if($table.find(':checked').length >= $('.numero_premios').val()){
		            $table.find(':not(:checked)').attr('disabled', 'disabled');
		        }else if($table.find(':checked').length < $('.numero_premios').val()){
