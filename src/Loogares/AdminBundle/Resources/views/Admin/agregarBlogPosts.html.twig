{% extends "LoogaresAdminBundle:Admin:base.html.twig" %}

{% block title %}{% if post.slug == '' %}Agregar Post{% else %}Editar Post | {{post.slug}}{% endif %}{{parent()}}{% endblock %}

{% block content %}
<style>.no-default{ display:none } .toggle-upload{ color: #06C !important; cursor: pointer; }</style>

	<h1 class="titulo_admin">{% if post.slug == '' %}Agregar nuevo post{% else %}Editar post | <a target="_blank" href="{{ path('post', {'ciudad': ciudad.slug, 'slug': post.slug}) }}">Ver la nota en el sitio</a>{% endif %}</h1>

	<form action="" method="post" {{ form_enctype(form) }}>
		<ul class="agregar_elementos_principales_blog_posts">

			<li class="titulo_post_box">
				<input class="titulo_post" name="titulo" type="text" placeholder="Escribe el Título de la nota aquí" value="{{post.titulo}}"/>
			</li>

			<li class="url_post">
				<label>http://www.loogares.com/{{ciudad.slug}}/blog/</label>
				<input class="slug_post" name="slug" id="" type="text" placeholder="escribe-la-url-para-el-post (evita números, tildes y caracteres especiales)"  value="{{post.slug}}"/>
			</li>

			<li class="usuario_post">
				<label>Escrito por</label>
				{% if post.usuario.id is not defined %}
					<input name="usuario" id="usuario" type="text" placeholder="Escribe el nombre o el ID del usuario" value="{{app.security.token.user.nombre}} {{app.security.token.user.apellido}} ({{app.security.token.user.id}}) | {{app.security.token.user.slug}}"/>
					<input name="usuario_id" id="usuario_id" type="hidden" value="({{app.security.token.user.id}})" />
				{% else %}
					<input name="usuario" id="usuario" type="text" placeholder="Nombre o ID del Usuario" value="{{post.usuario.nombre}} {{post.usuario.apellido}} ({{post.usuario.id}}) | {{post.usuario.slug}}"/>
					<input name="usuario_id" id="usuario_id" type="hidden" value="({{post.usuario.id}})" />
				{% endif %}
			</li>

		</ul>

		<div class="agregar_contenidos_blog_posts">		
			<ul class="agregar_blog_posts_contenido">

				<li class="lugar_post">
					<label>Lugar relacionado</label>
					{% if post.lugar.id is not defined %}
						<input id="lugar" type="text" placeholder="Escribe el nombre del lugar o su ID (opcional)"/>
						<input name="lugar_id" id="lugar_id" type="hidden" />
					{% else %}
						<input id="lugar" type="text" placeholder="Escribe el nombre del lugar o su ID (opcional)" value="{{post.lugar.nombre}} ({{post.lugar.id}}) | {{post.lugar.calle}} {{post.lugar.numero}} - {{post.lugar.comuna.nombre}}"/>
						<input name="lugar_id" id="lugar_id" type="hidden" value="({{post.lugar.id}})" />
					{% endif %}
				</li>

				<li class="contenidos_texto">
					<label>Contenido del post</label>
					<textarea name="contenido" class="contenido_post" rows="30" placeholder="Contenido Principal (HTML)">{{post.contenido}}</textarea>
				</li>

				<li class="contenidos_texto">
					<label>Texto para el newsletter</label>
					<textarea rows="30" class="preview_post" name="preview" placeholder="Preview (HTML)">{{post.preview}}</textarea>
				</li>
			
			</ul>

			<ul class="agregar_blog_posts_detalle">
				<div class="caja_interior">
					<a href="" class="toggle-detalle">Desplegar detalles</a>
					<div class="concurso_detalle">
						<li class="contenidos_texto">
							<label>Detalle del premio / post</label>
							<textarea rows="30" name="detalle" placeholder="Detalle del Post (HTML)">{{post.detalles}}</textarea>
						</li>
					</div>				
				</div>
			</ul>

			<ul class="agregar_blog_posts_condiciones">
				<div class="caja_interior">	
					<a href="" class="toggle-condiciones">Desplegar condiciones</a>
					<div class="concurso_condiciones">												
						<li class="contenidos_texto">
							<label>Condiciones del concurso</label>
							<textarea rows="30" name="condiciones" placeholder="Condiciones del Concurso (opcional)">{{post.condiciones}}</textarea>
						</li>
					</div>
				</div>
			</ul>
		
		</div>

		<ul class="agregar_contenidos_sidebar_blog_posts">

			<li class="imagen_post">
				<label>Imagen post</label>
				{{form_widget(form.vimagen, {'attr': {'class': 'subir_imagen'}} )}}
			</li>

			<li class="categoria_post">
				<label>Selecciona una categoría</label>
	            <select name="categoria">
	            	<option>Selecciona una categoría</option>
	            	{% for categoria in categorias %}
	            		 <option {% if post.blogCategoria.id is defined and post.blogCategoria.id == categoria.id %}selected="selected"{% endif %} value='{{categoria.id}}' data-tipo="{{categoria.blogTipoPost.id}}">{{categoria.nombre}}</option>
	            	{% endfor %}
	            </select>
	            <a class="agregar_nuevo" href="">Agregar una categoría nueva</a>
			</li>

			<li class="no-default">
				<label>Agrega una categoría</label>
				<input type="text" name="nueva_categoria" class="nueva_categoria" placeholder="Nombre de la categoría">
				<input type="text" name="nueva_categoria_clase" class="nueva_categoria_clase" placeholder="Nombre de la clase">
				<input type="text" name="nueva_categoria_hex" class="nueva_categoria_clase" placeholder="#hexcode">
				<strong>Tipo de post asociado a la categoría</strong>
				<select name="categoria_tipo_post">
					{% for tipo in tipos_post %}
						<option value="{{tipo.id}}">{{tipo.nombre}}</option>
					{% endfor %}
				</select>
				<a class="quitar_nuevo">Quitar</a>
			</li>

			<li class="estado_post">
				<label>Estado</label>
				<select name="estado">
	        		<option {% if post.blogEstado.id is defined and post.blogEstado.id == 1 %}selected="selected"{% endif %} value="1">Post Borrador</option>
	        		<option {% if post.blogEstado.id is defined and  post.blogEstado.id == 3 %}selected="selected"{% endif %} value="3">Post Agendado</option>
	        		<option {% if post.blogEstado.id is defined and  post.blogEstado.id == 4 %}selected="selected"{% endif %} value="4">Post Eliminado</option>
	        		{% if post.blogEstado.id is defined and post.blogEstado.id == 2 %}
	        			<option selected="selected" value="2">Post Publicado</option>
	        		{% endif %}
	            </select>
			</li>

			<li class="fecha_publicacion">
				<label>Fecha publicación</label>
				<input type="hidden" name="fecha_publicacion" id="fecha-desde" value="{% if post.fechaPublicacion %}{{post.fechaPublicacion|date('Y-m-d')}}{%endif%}">
        		<input type="text" id="fecha-desde-ph" placeholder="Fecha de Publicacion" value="{% if post.fechaPublicacion %}{{post.fechaPublicacion|date('d-m-y')}}{% endif %}">
			</li>

			<li>
				<a href="{{path('LoogaresAdminBundle_uploader')}}">Uploader</a>
			</li>

			<input type="hidden" name="ciudad" value="{% if post.ciudad.id is defined%}{{post.ciudad.slug}}{% else %}{{ciudad.slug}}{% endif %}"/>
			<input class="guardar_posts" type="submit" value=""/>
					
		</ul>

		<div class="destacado_home">

			<h2 class="titulo_admin_chico">Home</h2>

			<ul>

				<li>
					<label>Destacado Home</label>
		            <select class="destacado_home_dd" name="destacado_home">
		                <option {% if post.destacadoHome == 0 %}selected="selected"{% endif %} value='0'>No</option>
		                <option {% if post.destacadoHome == 1 %}selected="selected"{% endif %} value='1'>Sí</option>
		            </select>
				</li>

				<li>
					<label>Titulo Home</label>
					<input name="titulo_home" id="" type="text" placeholder="Titulo de Home en caso que no lleve Estado Concurso" value="{{post.tituloHome}}"/>
				</li>

				<li>
					<label>Imagen home</label>
					{{form_widget(form.vimagen_home, {'attr': {'class': 'subir_imagen'}} )}}
				</li>

				<li>
					<label>Descripción</label>
					<input name="descripcion_home" id="" type="text" placeholder="Descripción del Post" value="{{post.descripcionHome}}"/>
				</li>
			</ul>
		</div>		

		<div class="datos_concurso">
			<ul class="concurso">
				<li>
					<h2 class="titulo_admin_chico">Concurso</h2>
				</li>		

				<li>
					<label>Nombre local / Título</label>
					<input name="titulo_concurso" type="text" placeholder="Ej. Teatro Municipal" value="{{(concurso != null) ? concurso.titulo : ''}}"/>
				</li>

				<li>
					<label>Descripción concurso</label>
					<input name="descripcion_concurso" type="text" placeholder="Ej. Sorteamos 5 Gift Cards de $25.000 para 2 personas" value="{{(concurso != null) ? concurso.descripcion : ''}}"/>
				</li>

				<li>
					<label>Tipo de Concurso</label>
		            <select name="tipo_concurso">
		            	<option>Selecciona una Opción (o agrega una nueva)</option>
		            	{% for tipo_concurso in tipos_concurso %}
		            		 <option {% if concurso.tipoConcurso.id is defined and concurso.tipoConcurso.id == tipo_concurso.id %}selected="selected"{% endif %}value='{{tipo_concurso.id}}'>{{tipo_concurso.nombre}}</option>
		            	{% endfor %}
		            </select>
		            <a class="agregar_nuevo" href="">Agregar un nuevo tipo de concurso</a>
				</li>

				<li class="no-default">
					<label></label>
					<input type="text" name="nuevo_tipo_concurso" class="nuevo_tipo_concurso" placeholder="Agrega el nuevo tipo de Concurso">
					<a class="quitar_nuevo agregar_nuevo">Quitar</a>
				</li>

				<li class="premio_post">
					<label>Número de premios</label>
					<input class="numero_premios" name="numero_premios" type="text" placeholder="Ej. 5" value="{{(concurso != null) ? concurso.numeroPremios : ''}}"/>
				</li>

				<li>
					<label>Fecha y hora de inicio</label>
					<input type="hidden" id="fecha-desde-c" value="{% if concurso != null and concurso.fechaInicio %}{{concurso.fechaInicio|date('Y-m-d H:i')}}{% endif %}">
	        		<input type="text" name="fecha_inicio" id="fecha-desde-c-ph" placeholder="Ej. 25-12-2010 00:00" value="{% if concurso != null and concurso.fechaInicio %}{{concurso.fechaInicio|date('d-m-y H:i')}}{% endif %}">
				</li>

				<li>
					<label>Fecha y hora de cierre</label>
					<input type="hidden" id="fecha-hasta-c" value="{% if concurso != null and concurso.fechaTermino %}{{concurso.fechaTermino|date('Y-m-d H:i')}}{% endif %}">
	        		<input type="text" name="fecha_termino" id="fecha-hasta-c-ph" placeholder="Ej. 26-12-2010 12:00" value="{% if concurso != null and concurso.fechaTermino %}{{concurso.fechaTermino|date('d-m-y H:i')}}{% endif %}">
				</li>

				{% if concurso != null and post.lugar != null %}
					<li class="caja_ad_manager">
						<input type="checkbox" class="desplegar_ads ad_manager" />
						<span class="titulo_ad_manager">Código HTML para avisos de Ad Manager</span>
						<div class="codigo_ad_manager" style="display: none">
								{{-'<a style="float: left; height: 133px;" href="%%CLICK_URL_UNESC%%'~url('post', {'ciudad': ciudad.slug, 'slug': post.slug})~'">
									<div class="roll_over_concurso">
										<p class="sorteo_concurso">'~concurso.titulo~'</p>
									</div>	
									<div class="contenido_concurso">					
										<img src="http://www.loogares.com/assets/images/blog/'~post.imagen~'" />
										<h2 class="lugar_concurso">'~post.lugar.nombre~'</h2>
									</div>
								</a>'-}}
						</div>
					</li>
				{% endif %}

			</ul>
		</div>

		<div class="datos_concurso">
			<ul class="concurso">

				<li>
					<h2 class="titulo_admin_chico">Datos para el reporte 
					{% if post.lugar.id is not defined %}
					{% else %}
						de {{post.lugar.nombre}}
					{% endif %}
					</h2>
				</li>		

				<li>
					<label>Nº de Me Gusta en Facebook</label>
					<input name="facebook_inicio" type="text" placeholder="Nº de 'Me gusta' al inicio del concurso" value="{{(concurso != null) ? concurso.facebookInicio : ''}}"/>
				</li>

				<li>
					<label>Nº de Me Gusta en Facebook</label>
					<input name="facebook_cierre" type="text" placeholder="Nº de 'Me gusta' al cierre del concurso" value="{{(concurso != null) ? concurso.facebookFinal : ''}}"/>
				</li>

				<li>
					<label>Followers en Twitter</label>
					<input name="twitter_inicio" type="text" placeholder="Followers al inicio del concurso" value="{{(concurso != null) ? concurso.twitterInicio : ''}}"/>
				</li>

				<li>
					<label>Followers en Twitter</label>
					<input name="twitter_final" type="text" placeholder="Followers al cierre del concurso" value="{{(concurso != null) ? concurso.twitterFinal : ''}}"/>
				</li>

				<li><strong>Nº Visitas</strong></li>

				<li>
					<label>Página de inicio</label>
					<input name="visitas_home" type="text" placeholder="Nº visitas home" value="{{(concurso != null) ? concurso.visitasHome : ''}}"/>
				</li>

				<li>
					<label>Página de búsquedas</label>
					<input name="visitas_busquedas" type="text" placeholder="Nº visitas búsquedas" value="{{(concurso != null) ? concurso.visitasBusquedas : ''}}"/>
				</li>

				<li>
					<label>Página de otros locales</label>
					<input name="visitas_otros_locales" type="text" placeholder="Nº visitas fichas otros locales" value="{{(concurso != null) ? concurso.visitasOtrosLocales : ''}}"/>
				</li>

				<li>
					<label>Página nota concurso</label>
					<input name="visitas_post" type="text" placeholder="Nº visitas nota concurso" value="{{(concurso != null) ? concurso.visitasPost : ''}}"/>
				</li>

				<li>
					<label>Página ficha local</label>
					<input name="visitas_ficha" type="text" placeholder="Nº visitas ficha local" value="{{(concurso != null) ? concurso.visitasFicha : ''}}"/>
				</li>
			</ul>
		</div>

		{% if concurso != null and concurso.participantes | length > 0 %}
		<div class="datos_concurso">
			<ul class="concurso">
				<li>
					<h2 class="titulo_admin_chico">Participantes</h2>
					<span class="numero_de_ganadores">** Asignar un máximo de {{(concurso != null) ? concurso.numeroPremios : ''}} ganadores</span>
				</li>
				<li class="participantes_ganadores">
					<table style="width: 918px;">
						<thead style="text-align: left; padding: 0 0 20px 0; font-size: 14px; float: left">
							<th style="width: 50px; padding: 0 20px 0 0;">Id</th>
							<th style="width: 235px; padding: 0 20px 0 0;">Nombre usuario</th>
							<th style="width: 257px; padding: 0 20px 0 0;">Comuna, Ciudad</th>
							<th style="width: 80px; padding: 0 20px 0 0;">Ganadores</th>
							<th style="width: 110px; padding: 0 10px 0 0;">Código cupones</th>
							<th style="width: 100px;">Canjeado</th>
						</thead>
						<tbody>
							{% for participante in concurso.participantesActivos %}
								<tr style="padding: 7px 0 17px 0; height: 20px; float: left; width: 918px;">
									<td style="width: 50px; text-align: right; padding: 0 20px 0 0; font-size: 12px;">{{participante.usuario.id}}</td>
									<td style="width: 20px; padding: 0 5px 0 0;">
										<a href="{{path('showUsuario', {'param' : participante.usuario.slug})}}">
											<img src="{{ ('assets/images/usuarios/'~participante.usuario.imagenFull) | apply_filter('small_usuario') }}" width="20" height="20" />
										</a>
									</td>
									<td style="width: 210px; padding: 0 20px 0 0">
										<a href="{{path('showUsuario', {'param' : participante.usuario.slug})}}">{{participante.usuario.nombre}} {{participante.usuario.apellido}}</a>
									</td>
									<td style="width: 257px; padding: 0 20px 0 0;text-align:left">
										{% if participante.usuario.ciudad != null and participante.usuario.comuna != null %}{{participante.usuario.comuna.nombre}}, {{participante.usuario.ciudad.nombre}}{% elseif participante.usuario.comuna != null %}{{participante.usuario.comuna.nombre}}{% elseif participante.usuario.ciudad != null %}{{participante.usuario.ciudad.nombre}}{% endif %}
									</td>
									<td style="width: 80px; padding: 0 20px 0 0;">
										<input style="width: 20px; margin: 0 30px;" type="checkbox" class="ganadores_checkbox" data-participante="{{participante.id}}"{% if participante.ganador != null %}checked="checked"{% endif %} />
									</td>
									{% if participante.ganador != null %} 
										<td style="width: 100px;padding: 0 20px 0 0;text-align: right;">{{participante.ganador.codigo}}</td>
										<td style="width: 100px; text-align: center;">{{(participante.ganador.canjeado) ? 'Sí' : 'No'}}</td>
									{% else %}
										<td style="width: 100px; padding: 0 20px 0 0;text-align: right;">- - -</td>
										<td style="width: 100px; text-align: center;">- - -</td>
									{% endif %}
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<a class="asignar-ganadores"></a>
				</li>
			</ul>
		</div>
		{% endif %}

		{{form_rest(form)}}
	</form>

{% endblock %}

