		var changes;
		function removeDiacritics (str) {
		    if(!changes) {
		        changes = defaultDiacriticsRemovalMap;
		    }
		    for(var i=0; i<changes.length; i++) {
		        str = str.replace(changes[i].letters, changes[i].base);
		    }
		    return str;
		}

		function desplegarTipoPost($this) {
			var tipo_post = $this.find('option:selected').data('tipo');

    		if(tipo_post == '1') {
    			$('.datos_concurso').show();
    			$('.destacado_home').hide();
    		} else if(tipo_post == '2') {
    			$('.datos_concurso').hide();
    			$('.destacado_home').show();
    		}
		}

