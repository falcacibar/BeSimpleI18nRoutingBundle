{% if promociones|length > 0 %}
	<div class="caja_promociones">

		<div class="titulo_promociones">
		    <h4 class="titulo_home descuento">{{'extra.modulo_pedidos_online.titulo'|trans}}</h4>
		    <a class="ver_todos" href="">{{'extra.modulo_pedidos_online.ver_mas'|trans}}</a>
		</div>

		<ul>
			{% for promocion in promociones %}
		        <a href="{{path('_lugar', {'slug' : promocion.pedidoLugar.lugar.slug})}}">	
		        	<li {{(loop.last) ? "class='ultimo_pedido'" : ''}}>
		            	<div>
		                    <div class="promocion_delivery_img">
		                    	{% for img in promocion.pedidoLugar.lugar.imagenesLugar %}		
									{% if loop.last %}						
										<img src="{{ ('assets/images/lugares/'~img.imagenFull) | apply_filter('small_lugar') }}"  width="50" height="50" />
									{% endif %}
								{% endfor %}
							</div>
							<div class="promocion_delivery_lugar_dias">
								<p class="promocion_lugar">{{promocion.pedidoLugar.lugar.nombre}}</p>
								<p class="promocion_dias"><strong>{{'extra.modulo_pedidos_online.dias'|trans}}:</strong> {{promocion.dias}}</p>
							</div>
							<div class="promocion_delivery_descripcion">							
								<div class="promocion_icono"></div>
								<div class="promocion_titulo">
									{{promocion.titulo}}
								</div>
							</div>
		            	</div>
			        </li>
			    </a>
		    {% endfor %}
	    </ul>
	</div>
{% endif %}