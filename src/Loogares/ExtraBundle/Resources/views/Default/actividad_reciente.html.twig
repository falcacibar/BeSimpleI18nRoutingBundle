{% set lista = (home is defined) ? home.actividad : actividad.lista %}
<ul>
	{% for a in lista %}
		<li {% if loop.last %}class="last_one"{% endif %}>
			<a class="link_usuario" href="{{path('showUsuario', {'param' : a.usuario.slug})}}">
				<img src="{{('assets/images/usuarios/'~a.usuario.imagenFull) | apply_filter('small_usuario')}}" width="50" height="50" />
			</a>
			<div class="contenido_actividad">
				<span>{{a.relativeTime}}</span>
				{%- if a.tipoActividadReciente.nombre == 'agregar' -%}
					{%- if a.entidad == 'Loogares\\LugarBundle\\Entity\\ImagenLugar'-%}						
						<p><a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">
								{%- if a.usuario.nombre != '' -%}
									{{a.usuario.nombre}} {{a.usuario.apellido}}
								{%- else -%}
									{{a.usuario.slug}}
								{%- endif -%}
							</a>{{-' '-}}
							{%- if a.ent.estado.id == 3 -%}
								{% trans with {'%open_tag%' : '', '%close_tag%' : ' '}%}extra.home.actividad_reciente.agregar.foto{% endtrans %}
							{%- else -%}
								{% trans with {'%open_tag%' : "<a href='"~path('_fotoGaleria', {'slug' : a.ent.lugar.slug, 'id' : a.ent.id})~"'>", '%close_tag%' : '</a>'}%}extra.home.actividad_reciente.agregar.foto{% endtrans %}
							{%- endif -%}{{-' '-}}
							{%- if a.ent.lugar.estado.id != 3 -%}
								<a href="{{path('_lugar', {'slug' : a.ent.lugar.slug})}}">{{a.ent.lugar.nombre}}</a>
							{%- else -%}
								{{a.ent.lugar.nombre}}
							{%- endif -%}</p>
						</div>

						<div>
							{% if a.ent.estado.id != 3 %}
								<a class="link_lugar" href="{{path('_lugar', {'slug' : a.ent.lugar.slug})}}">
									<img src="{{ ('assets/images/lugares/'~a.ent.imagenFull) | apply_filter('small_lugar') }}"  width="50" height="50" />
								</a>
							{% endif %}							

					{%- elseif a.entidad == 'Loogares\\UsuarioBundle\\Entity\\Recomendacion'-%}
						<p><a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">
								{%- if a.usuario.nombre != '' -%}
									{{a.usuario.nombre}} {{a.usuario.apellido}}
								{%- else -%}
									{{a.usuario.slug}}
								{%- endif -%}
							</a>
							{%- if a.ent.estado.id == 3 -%}
								{{-' '-}}{% trans with {'%open_tag%' : '', '%close_tag%' : ' ', '%estrellas%' : "<span class='estrellas_actividad' data-stars="~a.ent.estrellas~"></span>"}%}extra.home.actividad_reciente.agregar.recomendacion{% endtrans %} 
							{%- else -%}
								{{-' '-}}{% trans with {'%open_tag%' : "<a href='"~path('_recomendacion', {'slug' : a.ent.lugar.slug, 'usuarioSlug' : a.usuario.slug})~"'>", '%close_tag%' : '</a>', '%estrellas%' : "<span class='estrellas_actividad' data-stars="~a.ent.estrellas~"></span>"}%}extra.home.actividad_reciente.agregar.recomendacion{% endtrans %} 
							{%- endif -%}
							{%- if a.ent.lugar.estado.id != 3 -%}
								{{-' '-}}<a href="{{path('_lugar', {'slug' : a.ent.lugar.slug})}}">{{a.ent.lugar.nombre}}</a>
							{%- else -%}
								{{a.ent.lugar.nombre}}
							{%- endif -%}
							{% if a.ent.estado.id != 3 %}
								<p class="rec_actividad_preview">{{a.ent.preview | raw}}</p>
							{% endif %}</p>

					{%- elseif a.entidad == 'Loogares\\UsuarioBundle\\Entity\\Util'-%}
						<p class="util_actividad"><a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">
								{%- if a.usuario.nombre != '' -%}
									{{a.usuario.nombre}} {{a.usuario.apellido}}
								{%- else -%}
									{{a.usuario.slug}}
								{%- endif -%}
							</a>
							{%- if a.ent.recomendacion.estado.id == 3 -%}
								{{-' '-}}{% trans with {'%open_tag%' : '', '%close_tag%' : ' ', '%usuario%' : "<a href='"~path('showUsuario', {'param' : a.ent.recomendacion.usuario.slug})~"'>"~a.ent.recomendacion.usuario.nombre~' '~a.ent.recomendacion.usuario.apellido~"</a>"}%}extra.home.actividad_reciente.agregar.util{% endtrans %}
							{%- else -%}
								{{-' '-}}{% trans with {'%open_tag%' : "<a href='"~path('_recomendacion', {'slug' : a.ent.recomendacion.lugar.slug, 'usuarioSlug' : a.ent.recomendacion.usuario.slug})~"'>", '%close_tag%' : '</a>', '%usuario%' : "<a href='"~path('showUsuario', {'param' : a.ent.recomendacion.usuario.slug})~"'>"~a.ent.recomendacion.usuario.nombre~' '~a.ent.recomendacion.usuario.apellido~"</a> "}%}extra.home.actividad_reciente.agregar.util{% endtrans %}
							{%- endif -%}
							{%- if a.ent.recomendacion.lugar.estado.id != 3 -%}
								{{-' '-}}<a href="{{path('_lugar', {'slug' : a.ent.recomendacion.lugar.slug})}}">{{a.ent.recomendacion.lugar.nombre}}</a>
							{%- else -%}
								{{-' '-}}{{a.ent.recomendacion.lugar.nombre}}
							{%- endif -%}</p>

					{%- elseif a.entidad == 'Loogares\\LugarBundle\\Entity\\Lugar'-%}
						<p><a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">{{a.usuario.nombre}} {{a.usuario.apellido}}</a> {{'extra.home.actividad_reciente.agregar.lugar'|trans}}: {% if a.ent.estado.id != 3 %}<a href="{{path('_lugar', {'slug' : a.ent.slug})}}">{{a.ent.nombre}}</a>{% else %}{{a.ent.nombre}}{% endif %}</p>
					{%- endif -%}

				{%- elseif a.tipoActividadReciente.nombre == 'editar' -%}
					{%- if a.entidad == 'Loogares\\UsuarioBundle\\Entity\\Recomendacion'-%}
						<p><a href="{{path('showUsuario', {'param' : a.usuario.slug})}}">	
								{%- if a.usuario.nombre != '' -%}
									{{a.usuario.nombre}} {{a.usuario.apellido}}
								{%- else -%}
									{{a.usuario.slug}}
								{%- endif -%}
							</a>
							{%- if a.ent.estado.id == 3 -%}
								{{-' '-}}{% trans with {'%open_tag%' : '', '%close_tag%' : ' ', '%estrellas%' : "<span class='estrellas_actividad' data-stars="~a.ent.estrellas~"></span>"}%}extra.home.actividad_reciente.editar.recomendacion{% endtrans %}
							{%- else -%}
								{{-' '-}}{% trans with {'%open_tag%' : "<a href='"~path('_recomendacion', {'slug' : a.ent.lugar.slug, 'usuarioSlug' : a.usuario.slug})~"'>", '%close_tag%' : '</a>', '%estrellas%' : "<span class='estrellas_actividad' data-stars="~a.ent.estrellas~"></span>"}%}extra.home.actividad_reciente.editar.recomendacion{% endtrans %}
							{%- endif -%}
							{%- if a.ent.lugar.estado.id != 3 -%}
								{{-' '-}}<a href="{{path('_lugar', {'slug' : a.ent.lugar.slug})}}">{{a.ent.lugar.nombre}}</a>
							{%- else -%}
								{{a.ent.lugar.nombre}}
							{%- endif -%}</p>
						{%- if a.ent.estado.id != 3 -%}
							<p class="rec_actividad_preview">{{a.ent.preview | raw}}</p>
						{%- endif -%}
					{% endif %}
				{% endif %}
			</div>
		</li>
	{% endfor %}
</ul>