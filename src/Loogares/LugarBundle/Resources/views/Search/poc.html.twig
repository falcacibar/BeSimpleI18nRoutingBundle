<!doctype html>   
<html>
<head> 
	<meta charset="utf-8" /> 
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>The new page skeleton.</title>
	<link rel="shortcut icon" href="assets/img/favicon.png" />
	<style type="text/css" media="screen">
		html{
			color: 
			{% if i == 0 %}
				black
			{% elseif i == 1 %}
				red
			{% elseif i == 2 %}
				blue
			{% endif %}
			;
		}
	</style>
	<script src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'></script>
	<script src="{{asset('assets/js/jquery.pjax.js')}}"></script>
	<script>
		$(document).ready(function(){
				$('a').pjax({
					url: $(this).attr('href'),
					container: '#main',
					fragment: '#main'	
				});

				$('body').bind('pjax:start', function(){console.log('start')})
				$('body').bind('pjax:end', function(){console.log('end')})
		})
	</script>
</head>
<body>
	
	<div id="page">
		<ul>
			<li><a href="{{ path('_poc', {'i': 0}) }}">Index</a></li>
			<li><a href="{{ path('_poc', {'i': 1}) }}">Page 1</a></li>
			<li><a href="{{ path('_poc', {'i': 2}) }}">Page 2</a></li>
		</ul>

		<div id="main">
			Page {{i}}
		</div>	
	</div>
</body>
</html>