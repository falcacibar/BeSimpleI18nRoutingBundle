			<ul>
			{% for categoria in results.totalPorCategoria %}
				<li><a class="link_azul" href="{{ path('_buscar', {'slug': slug, 'q': term, 'o': override, 'categoria': categoria.slug, 'sector': sector, 'comuna': comuna, 'resultados': resultados}) }}">{{categoria.nombre}} ({{ categoria.total }})</a></li>
			{% endfor %}
			</ul>
		</div>
	{% endif %}

