	<script>
    var $sidebar   = $(".sidebar"),
    $window    = $(window),
    offset     = $sidebar.offset(),
    ultimaBusqueda = $('.listado_resultados').height() - 43;
    topPadding = 50;

    $window.scroll(function() {
        if ($window.scrollTop() >= offset.top && $window.scrollTop() <= ultimaBusqueda + topPadding) {
            $sidebar.stop().animate({
                marginTop: $window.scrollTop() - offset.top + topPadding
            });
        }else if($window.scrollTop() >= ultimaBusqueda && ultimaBusqueda <= $window.scrollTop()){
        	$sidebar.stop().animate({
                marginTop: ultimaBusqueda - offset.top - 15
            });
        }else{
            $sidebar.stop().animate({
                marginTop: 0
            });	
        }
    });
	</script>
