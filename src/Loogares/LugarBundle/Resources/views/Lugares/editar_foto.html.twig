{% extends "::base.html.twig" %}

{% block title %}{{'fotos.editar.title'|trans}} {{imagen.lugar.nombre}} | {{parent()}}{% endblock %}

{% block content %}
	<div id="editar_foto_lugar">
		<h1>{{'fotos.editar.titulo'|trans}} <a href="{{path('_lugar', {'slug' : imagen.lugar.slug })}}">{{imagen.lugar.nombre}}</a></h1>

		<form action="{{ path('_editarFotoLugar', { 'slug' : imagen.lugar.slug, 'id' : imagen.id }) }}" method="post" {{ form_enctype(form) }}>
			<ul>
				<li>
					<img src="{{ ('assets/images/lugares/'~imagen.imagenFull) | apply_filter('small_lugar') }}" />
					{{ form_label(form.titulo_enlace, 'fotos.agregar.descripcion') }}
					{{ form_widget(form.titulo_enlace) }}
				</li>
				{{form_rest(form)}}

				<li>
					<label></label>
					<input type="submit" value="{{'fotos.agregar.submit'|trans}}" formnovalidate />
				</li>
			</ul>
		</form>
	</div>
{% endblock %}