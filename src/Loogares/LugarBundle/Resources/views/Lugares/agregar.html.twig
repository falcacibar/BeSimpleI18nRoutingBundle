{% extends "::base.html.twig" %}

{% block title %}Agregar Lugar | {{parent()}}{% endblock %}

{% block stylesheets %}
    <style>
        .agregar-lugar li{
            display: block; 
        }

        .placeholder{
            color: #ccc;
        }

        input{
            padding: 4px;
            border: none;
            border: 1px solid #ccc;
        }

        input:focus{
            outline: none;
        }

        .input-active{
            border: 1px solid #3f0;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{parent()}}


    <script>
        $('input[type=text]').each(function(){
            $this = $(this);
            placeholder = $this.attr('data-placeholder');

            $this.val(placeholder);
            $this.addClass('placeholder');
        }).focus(function(){
            $this = $(this);
            placeholder = $this.attr('data-placeholder');
            $this.removeClass('placeholder').addClass('input-active');

            if($this.val() == placeholder){
                $this.val('');
            }
        }).blur(function(){
            $this = $(this);
            placeholder = $this.attr('data-placeholder');
            $this.removeClass('input-active');

            if($this.val() == ''){
                $this.val(placeholder);
                $this.addClass('placeholder');
            }            
        })
    </script>
{% endblock %}

