        $('.quitar').click(function(e){
            e.preventDefault();

            var $this = $(this);
                rel = $this.attr('rel') || '',
                count = 0;

            $this.parent().parent().fadeOut();
            $this.parent().parent().prev('li').find('span').fadeIn();

