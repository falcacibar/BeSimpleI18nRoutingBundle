<div class="foto_galeria">
	
	<div class="botones_anterior_siguiente">
		<ul>
			{% if vecinas.prev is not empty %}
				<a class="boton_anterior" href="{{ path( '_fotoGaleria', { 'slug' : imagen.lugar.slug, 'id' : vecinas.prev } )}}">
					<li class="anterior"></li>
				</a>
			{% endif %}
				<a class="boton_siguiente" href="{{ (vecinas.next is not empty) ? path( '_fotoGaleria', { 'slug' : imagen.lugar.slug, 'id' : vecinas.next }) : path( '_galeria', { 'slug' : imagen.lugar.slug }) }}">
					<li class="siguiente"></li>
				</a>
		</ul>
	</div>

	<div class="imagen_principal">
		<img src="{{ asset('assets/images/lugares/'~imagen.imagenFull)}}" height="{{dimensiones.alto}}" width="{{dimensiones.ancho}}"/>
	</div>
</div>

<div class="foto_info">

	<span class="fecha_foto">
		{{-imagen.fechaCreacion | date('d/m/Y')-}}
	</span>

	<span class="descripcion_foto">
		{% if imagen.tituloEnlace is not empty %}
			{% if imagen.esEnlace %}
				<a href="{{imagen.tituloEnlace}}" target="blank">{{imagen.tituloEnlace}}</a>
			{% else %}
				{{imagen.tituloEnlace}}
			{% endif %}
		{% endif %}
	</span>

	<ul>
		<li class="autor_foto">{{'fotos.galeria.autor'|trans}} <a href="{{ path('showUsuario', {'param' : imagen.usuario.slug })}}">{{imagen.usuario.nombre}} {{imagen.usuario.apellido}}</a></li>

		<li class="opciones_foto">			
			{% if imagen.loggeadoCorrecto %}
				<a class="editar_foto" href="{{path('_editarFotoLugar', {'slug' : imagen.lugar.slug, 'id' : imagen.id })}}">{{'fotos.galeria.editar'|trans}}</a>
				<a class="borrar_foto" href="{{path('_eliminarFotoLugar', {'slug' : imagen.lugar.slug, 'id' : imagen.id})}}" class="borrar-foto-lugar">{{'fotos.galeria.borrar'|trans}}</a>
			{% elseif reportar == 1 %}
				<a class="borrar_foto" href="{{path('_reportarFoto', {'slug' : imagen.lugar.slug, 'id' : imagen.id})}}">{{'fotos.galeria.reportar'|trans}}</a>
			{% endif %}
		</li>
	</ul>

</div>	